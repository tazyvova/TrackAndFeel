{
  email {$ACME_EMAIL}

  on_demand_tls {
    interval 2m
    burst    5
  }
}

(api-routes) {
  handle /api/* {
    reverse_proxy {args.0}
  }

  handle /healthz {
    reverse_proxy {args.0}
  }

  handle /version {
    reverse_proxy {args.0}
  }
}

{$DOMAIN} {
  route {
    import api-routes backend:8080

    handle /frontend-version {
      root * /usr/share/nginx/html
      rewrite * /version.txt
      file_server
    }

    handle {
      root * /usr/share/nginx/html
      try_files {path} /index.html
      file_server
    }
  }

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "strict-origin-when-cross-origin"
  }

  encode zstd gzip
}



localhost {
  route {
    import api-routes backend:8080

    handle /frontend-version {
      root * /usr/share/nginx/html
      rewrite * /version.txt
      file_server
    }

    handle {
      root * /usr/share/nginx/html
      try_files {path} /index.html
      file_server
    }
  }
}


# PR preview subdomains â€” individual certs via on-demand TLS (HTTP-01 challenge)
:443 {
  tls {
    on_demand
  }

  @preview host *.{$PREVIEW_DOMAIN}

  handle @preview {
    map {host} {pr_id} {
      ~^pr-(\d+)\. "${1}"
    }

    handle /api/* {
      reverse_proxy pr-{pr_id}-backend:8080
    }

    handle /healthz {
      reverse_proxy pr-{pr_id}-backend:8080
    }

    handle /version {
      reverse_proxy pr-{pr_id}-backend:8080
    }

    handle {
      reverse_proxy pr-{pr_id}-frontend:80
    }
  }
}
